.container
  .row
    .col-md-12
      %h1= 'Welcome ' + @user.name + ' ' + @user.lastname + '!'
  .row
    .col-md-12
      %h3 Your contests are listed below, you can create new contests or manage the contests you have created by clicking on it.
      %br
.container
  .row
    - @user.contests.each do |contest|
      .col-md-3.thumb.contest-thumb{ 'data-contest-id': contest.id }
        = link_to contest, class: 'thumbnail' do
          = image_tag contest.banner.url(:medium_nr), class: 'img-circle'